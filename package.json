{
  "name": "demo-shop",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@unform/core": "^2.0.0",
    "@unform/web": "^2.0.0",
    "axios": "^0.21.1",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "font-awesome": "^4.7.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-input-mask": "^2.0.4",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "styled-components": "^5.0.1",
    "yup": "^0.28.3"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jest-environment-jsdom-sixteen",
    "coverage": "react-app-rewired test --env=jest-environment-jsdom-sixteen --coverage --watchAll=false",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.1",
    "@testing-library/user-event": "^10.0.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "@types/react-input-mask": "^2.0.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/styled-components": "^5.0.1",
    "@types/yup": "^0.26.33",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "commitizen": "^4.0.3",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "24.9.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "prettier": "2.0.2",
    "react-app-rewired": "^2.1.5",
    "ts-jest": "^25.2.1",
    "typescript": "~3.7.2"
  },
  "jest": {
    "testMatch": [
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleNameMapper": {
      "^~/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "!src/index.tsx",
      "!src/App.tsx",
      "!src/routes/*",
      "!src/styles/*"
    ],
    "coverageDirectory": "<rootDir>/src/__tests__/coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
